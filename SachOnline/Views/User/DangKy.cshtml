﻿@model SachOnline.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_ LayoutUser.cshtml";
}
<style type="text/css">
    .fdk {
        width: 550px;
        height: 600px;
        background-image: url('../../images/dk.png');
        background-size: cover;
        background-position: center center;
        margin: 0 auto; /* Để căn giữa ngang */
        background-position-y: 595px;
    }

    .bdk {
        height: 550px;
        width: 500px;
    }

    .cot1 {
        text-align: right;
        padding-right: 15px;
    }
    /* Định dạng cho nút Đăng ký và Xóa Thông Tin */
    input[type="submit"], input[type="reset"] {
        background-color: #008CBA; /* Màu nền */
        color: #fff; /* Màu chữ */
        padding: 10px 20px; /* Kích thước nút */
        border: none; /* Loại bỏ viền */
        border-radius: 5px; /* Đường viền cong */
        margin-right: 10px; /* Khoảng cách giữa nút */
    }

    /* Định dạng cho thông báo lỗi */
    span.error {
        color: red; /* Màu chữ đỏ cho thông báo lỗi */
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>

<div class="fdk" align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    <table class="bdk">
        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(true)
            <tr>
                <td class="cot1">Họ tên:</td>
                <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
            </tr>
            <tr>
                <td class="cot1">Tên đăng nhập:</td>
                <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
            </tr>
            <tr>
                <td class="cot1">Mật khẩu:</td>
                <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
            </tr>
            <tr>
                <td class="cot1">Mật khẩu nhập lại:</td>
                <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
            </tr>
            <tr>
                <td class="cot1">Email:</td>
                <td>@Html.TextBox("Email") @ViewData["err5"]</td>
            </tr>
            <tr>
                <td class="cot1">Điện thoại:</td>
                <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
            </tr>
            <tr>
                <td class="cot1">Ngày sinh:</td>
                <td><input type="date" name="NgaySinh" @ViewData["err7"] /></td>
            </tr>
            <tr>
                <td class="cot1">Địa chỉ:</td>
                <td><input type="text" name="DiaChi" /></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
                </td>
            </tr>
        }
    </table>
</div>
