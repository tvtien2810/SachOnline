<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>SÁCH ONLINE</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 100%;
            height: auto;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>


</head>
<body>
    @Html.Action("NavPartial", "SachOnline")
    <div class="container">
        <div class="row">


            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="carousel1" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel1" data-slide-to="0" class="active"> </li>
                        <li data-target="#carousel1" data-slide-to="1" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="2" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="3" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="4" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="5" class=""> </li>
                    </ol>
                    <div class="carousel-inner">
                        @RenderSection("Slider", required: false)
                    </div>
                    <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon-prev"></span></a> <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
                </div>
            </div>
        </div>
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "SachOnline")
                <br>

                @Html.Action("NhaXuatBanPartial", "SachOnline")

            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        @RenderSection("SachBanNhieu", required: false)
        <!-- row-->
        <hr>
    </div>
    <!-- /.container-->
    @Html.Action("FooterPartial", "SachOnline")
</body>
</html>
